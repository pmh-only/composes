*.pmh.codes {
	redir https://pmh.codes
}

pmh.codes {
	import commons

	@root_and_query_exists {
		path /
		expression {uri}.contains('?')
	}

	redir /ghost* /

	reverse_proxy ghost:2368
	reverse_proxy @root_and_query_exists supershort:8080
}

www.pmh.codes {
	import commons

	redir https://pmh.codes{uri} permanent
}

